{
  "manifest_version": 2,

  "name": "scan-word",
  "description": "This extension is my first blood",
  "version": "1.0",
  "background": {
    "scripts": ["background_script.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content_script.js"]
    }
  ],
  "browser_action": {
    "default_icon": "decode-favicon.png"
  },
  "permissions": [
    "activeTab",
    "debugger",
    "*://*/*"
  ]
}